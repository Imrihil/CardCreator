<Window x:Class="MyWarCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:MyWarCreator.Properties"
        mc:Ignorable="d"
        Title="MyWarCreator v.2.4" Height="600" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="130"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="10,10,10,10" TextWrapping="Wrap" Grid.ColumnSpan="3"><Run Text="{x:Static p:Resources.Hello}"/></TextBlock>
        <TextBlock Margin="10,10,10,10" TextWrapping="Wrap" FontStyle="Italic" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Auto" Grid.ColumnSpan="2"
                   Grid.Column="0"><Run Text="{x:Static p:Resources.Description}"/></TextBlock>
        <Button Content="Generuj karty ekwipunku" Margin="10,5,5,5" Click="ButtonGenerateWeapons_Click" Grid.Row="2"
                Grid.Column="0" />
        <Button Content="{x:Static p:Resources.WeaponsPdf}" Margin="5,5,10,5" Click="ButtonWeaponsPdf_Click" Grid.Row="2" Grid.Column="1"/>
        <Button Content="{x:Static p:Resources.Skills}" Margin="10,5,5,5" Click="ButtonGenerateSkills_Click" Grid.Row="3"
                Grid.Column="0" />
        <Button Content="{x:Static p:Resources.SkillsPdf}" Margin="5,5,10,5" Click="ButtonSkillsPdf_Click" Grid.Row="3" Grid.Column="1"/>
        <Button Content="{x:Static p:Resources.DownloadMonsters}" Margin="10,5,10,5" Click="ButtonDownloadMonsters_Click" Grid.Row="4" Grid.ColumnSpan="2"
                Grid.Column="0" />
        <Button Content="{x:Static p:Resources.GenerateMonsters}" Margin="10,5,5,5" Click="ButtonGenerateMonsters_Click" Grid.Row="5"
                Grid.Column="0" />
        <Button Content="{x:Static p:Resources.MonstersPdf}" Margin="5,5,10,5" Click="ButtonMonstersPdf_Click" Grid.Row="5" Grid.Column="1"/>
        <Button Content="{x:Static p:Resources.GenerateAll}" Margin="10,5,5,5" Click="ButtonGenerateAll_Click" Grid.Row="6"
                Grid.Column="0" />
        <Button Content="{x:Static p:Resources.PreparePdf}" Margin="5,5,10,5" Click="ButtonGeneratePdf_Click" Grid.Row="6" Grid.Column="1"/>
        <Button Content="{x:Static p:Resources.CustomPdf}" Margin="10,5,10,5" Click="ButtonCustomPdf_Click" Grid.Row="7" Grid.ColumnSpan="2"
                Grid.Column="0" />
        <ProgressBar x:Name="ProgressBar" Margin="10,10,10,10" IsHitTestVisible="True" Grid.Row="8" Grid.ColumnSpan="2"
                     Grid.Column="0" />
        <TextBlock x:Name="ProgressBarText" Margin="12,12,12,12" Text="{Binding ElementName=ProgressBar, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="8" Grid.ColumnSpan="2"
                   Grid.Column="0" />
        <TextBox x:Name="TextBoxResultMessage" Margin="10,10,10,10" Grid.Row="9" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" Text="Logi." Grid.ColumnSpan="2"
                 Grid.Column="0" />
    </Grid>
</Window>
