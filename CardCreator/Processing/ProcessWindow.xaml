<Window x:Class="CardCreator.Processing.ProcessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:CardCreator.Properties"
        mc:Ignorable="d"
        Title="ProcessWindow" Width="400" Height="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="ProgressBar" Margin="10,10,10,10" IsHitTestVisible="True" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />
        <TextBlock x:Name="ProgressBarText" Margin="10,0,10,0" Text="{Binding ElementName=ProgressBar, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="2" />
        <TextBox x:Name="TextBoxResultMessage" Margin="10,10,10,10" Grid.Row="1" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" Text="Logi." IsReadOnly="True" Grid.Column="0"  Grid.ColumnSpan="2" />
        <Button Content="{x:Static p:Resources.Ok}" Margin="5,5,10,5" Click="ButtonOk_Click" Grid.Row="2" Grid.Column="0" />
        <Button Content="{x:Static p:Resources.Cancel}" Margin="5,5,10,5" Click="ButtonCancel_Click" Grid.Row="2" Grid.Column="1" />
    </Grid>
</Window>
