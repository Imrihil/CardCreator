<Window x:Class="CardCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:CardCreator.Properties"
        mc:Ignorable="d"
        Title="CardCreator v.1.2.3" Width="400" Height="420">
    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{x:Static p:Resources.Hello}" Margin="5,5,5,5" TextWrapping="Wrap" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" />
        <TextBlock Text="{x:Static p:Resources.Description}" Margin="5,5,5,5" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Auto" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" />
        <Separator Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" />
        <CheckBox Name="GenerateImages_Checkbox" Content="{x:Static p:Resources.GenerateImages}" Margin="5,5,5,5" IsChecked="True" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" />
        <Separator Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="4" />
        <Label Content="{x:Static p:Resources.SourceFile}" Margin="5,0,5,0" Grid.Row="6" Grid.Column="1" />
        <Label Name="ChoosenFile_Label" Margin="5,0,5,0" FontStyle="Italic" Grid.Row="6" Grid.Column="3" Grid.ColumnSpan="2" />
        <Button Name="ChooseFile_Button" Content="{x:Static p:Resources.ChooseFile}" Margin="5,5,5,5" Click="ChooseFile_Button_Click" Grid.Row="6" Grid.Column="2" />
        <Button Name="GenerateCards_Button" Content="{x:Static p:Resources.GenerateCards}" Margin="5,5,5,5" Click="GenerateCards_Button_Click" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" />
        <Button Name="PreparePdf_Button" Content="{x:Static p:Resources.PreparePdf}" Margin="5,5,5,5" Click="PreparePdf_Button_Click" Grid.Row="7" Grid.Column="3" Grid.ColumnSpan="2" />
        <Separator Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="4" />
        <Label Content="{x:Static p:Resources.Cards}" Margin="5,0,5,0" Grid.Row="9" Grid.Column="1" />
        <Button Name="ChooseImages_Button" Content="{x:Static p:Resources.ChooseImages}" Margin="5,5,5,5" Click="ChooseImages_Button_Click" Grid.Row="9" Grid.Column="2" />
        <Label Name="ChoosenImages_Label" Margin="5,0,5,0" FontStyle="Italic" Grid.Row="9" Grid.Column="3" Grid.ColumnSpan="2" />
        <Label Content="Dpi:" Margin="5,0,5,0" Grid.Row="10" Grid.Column="1" />
        <TextBox Name="Dpi_TextBox" Margin="5,0,5,0" Text="150" VerticalAlignment="Center" Grid.Row="10" Grid.Column="2" />
        <Button Name="PrepareChoosenPdf_Button" Content="{x:Static p:Resources.PrepareChoosenPdf}" Margin="5,5,5,5" Click="PrepareChoosenPdf_Button_Click" Grid.Row="10" Grid.Column="3" Grid.ColumnSpan="2" />
        <Separator Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="4" />
    </Grid>
</Window>
